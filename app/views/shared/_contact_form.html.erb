<%= simple_form_for @message, :remote => true, :html => {:name => 'sentMessage', :id => 'contactForm', :class =>'fuck' } do |f| %>

    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <%# f.label :name %>
            <%= f.input :name, :required => true, :input_html => {:class =>'form-control', :id =>'name', :placeholder=>'Name'} %>
            <p class="help-block text-danger"></p>
        </div>
    </div>

    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <%# f.label :email %>
            <%= f.input :email, :required => true, :input_html =>{:class =>'form-control', :id =>'email', :placeholder=>'Email Address'} %>
            <p class="help-block text-danger"></p>
        </div>
    </div>

    <div class="row control-group">
        <div class="form-group col-xs-12 floating-label-form-group controls">
            <%# f.label :message %>
            <%= f.input :message, :as => :text, :required => true, :input_html => {:class =>'form-control', :id =>'message', :placeholder=>'Message'} %>
            <p class="help-block text-danger"></p>
        </div>
    </div>

    <br>

    <div class= "hidden">
      <%= f.input :nickname, :hint => 'Leave this field blank!' %>
    </div>



    <div class="row">
        <!-- messages -->
    <div id="flash"></div>
      <div class="form-group">
      <%= f.button :submit, 'Send', :class=> "btn btn-success btn-lg", :id=>'send' %>
      </div>
    </div>    
<% end %>

  

